{
  "name": "@parley-hub/grace",
  "version": "0.0.3",
  "description": "Design System",
  "repository": "git@github.com:ParleyHub/Grace.git",
  "author": "Hiep Nguyen <hiepnh610@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@storybook/addon-actions": "^6.3.8",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/react": "^6.3.8",
    "@types/react": "^17.0.20",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "autoprefixer": "^9",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.2",
    "postcss": "^7",
    "postcss-import": "^12.0.0",
    "prettier": "^2.4.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sass": "^1.39.0",
    "sass-loader": "^10.1.1",
    "stylelint-config-prettier": "^8.0.2",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat",
    "ts-loader": "^8.3.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.4.2",
    "webpack-cli": "^4.8.0"
  },
  "scripts": {
    "clean": "rimraf lib",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "build": "yarn clean && NODE_ENV=development webpack --env development",
    "build-prod": "yarn clean && NODE_ENV=production webpack --env production",
    "check-types": "tsc --pretty --noEmit",
    "check-format": "prettier --check .",
    "check-lint": "eslint . --ext ts --ext tsx",
    "format": "prettier --write .",
    "test-all": "yarn check-format && yarn check-lint && yarn check-types",
    "prepare": "husky install"
  },
  "main": "lib/index.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "files": [
    "/lib"
  ],
  "resolutions": {
    "babel-loader": "8.1.0",
    "webpack": "4.44.2"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  }
}
